<%- layout('layout/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new" class="btn btn-info">Add campground</a>

        <%campgrounds.forEach(camp=>{%>
            <div class="card mb-3">
              <div class="row">
                <div class="col-md-4">
                  <img src="<%=camp.image%>" alt="<%=camp.title%>" class="img-fluid">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><%=camp.title%></h5>
                    <p class="card-text"><%=camp.description%></p>
                    <p class="card-text text-muted"><small><%=camp.location%></small></p>
                    <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%></a>
                  </div>
                </div>
              </div>
            </div>
        <%})%>

    <footer></footer>
