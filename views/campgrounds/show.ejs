<%- layout('layout/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-5">
      <img src="<%=camp.image%>" class="card-img-top" alt="<%= camp.title %>" />
      <div class="card-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=camp.location%></li>
        <li class="list-group-item">$<%= camp.price %>/night</li>
      </ul>
      <div class="card-body">
        <div class="input-group">
          <div>
            <a href="/campgrounds" class="card-link btn btn-success"
              >All Campgrounds</a
            >
          </div>
          <div class="mx-2">
            <a
              href="/campgrounds/<%=camp._id%>/edit"
              class="card-link btn btn-info"
              >Edit this Campground</a
            >
          </div>
          <form
            action="/campgrounds/<%=camp._id%>?_method=DELETE"
            method="POST"
          >
            <button type="submit" class="card-link btn btn-danger">
              Delete Camp
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6">
    <h2>Leave a review</h2>
    <form
      action="/campgrounds/<%=camp._id%>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          id="rating"
          type="range"
          min="1"
          max="5"
          step="1"
          class="form-range"
          name="review[rating]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="review">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id=""
          cols="30"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-success" type="submit">Submit</button>
    </form>
    <%camp.reviews.forEach(review=>{%>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%=review.rating%></h5>
        <p class="card-text"><%=review.body%></p>
      </div>
      <div class="card-footer">
        <form
          action="/campgrounds/<%=camp._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
          class="m-0"
        >
          <button class="btn btn-danger btn-sm">Delete</button>
        </form>
      </div>
    </div>
    <% })%>
  </div>
</div>
